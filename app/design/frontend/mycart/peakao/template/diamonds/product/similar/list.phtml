                    	<!-- IkD -->
                    	<button type="button" class="button" onclick="location.href='<?php echo $_diamondsHelper->getAddToRingUrl($_product);?>'" >
                    		<span><?php echo $this->__('Add to ring') ?></span>
                    	</button>
                    	<!-- IkD -->
                        
                        <?php if($_product->isSaleable()): ?>
                        	<?php if ( !($_product->getTypeInstance(true)->hasRequiredOptions($_product) || $_product->isGrouped()) ) { ?>
