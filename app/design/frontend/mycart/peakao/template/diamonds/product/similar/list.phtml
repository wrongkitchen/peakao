                    	<div id="<?php echo $_product->getId();?>">
                    	<img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(226); ?>" width="226" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" />
                    	</div>
                    </a>
                    <h2 class="product-name"><a href="<?php echo $_diamondsHelper->getDiamondUrl($_product); ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></a></h2>
